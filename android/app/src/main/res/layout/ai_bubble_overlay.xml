<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ai_bubble_bg"
    android:padding="16dp"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <!-- Prompt Input Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ai_bubble_prompt"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/promptEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ai_bubble_edit_bg"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:hint="@string/ai_bubble_prompt_hint"
        android:textSize="14sp"
        android:minHeight="48dp"
        android:maxHeight="100dp"
        android:scrollbars="vertical"
        android:overScrollMode="always"
        android:gravity="top|start"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="textMultiLine|text"
        android:clickable="true"
        android:longClickable="true"
        android:selectAllOnFocus="false"
        android:enabled="true"
        android:layout_marginBottom="16dp" />

    <!-- AI Result Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ai_bubble_result"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <com.example.flow_ai.MaxHeightScrollView
        android:id="@+id/aiResultScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginBottom="16dp"
        android:scrollbars="vertical"
        app:maxHeight="240dp">

        <TextView
            android:id="@+id/aiResultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ai_bubble_result_bg"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:minHeight="48dp"
            android:gravity="top|start"
            android:text="..." />
    </com.example.flow_ai.MaxHeightScrollView>

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:baselineAligned="false">

        <Button
            android:id="@+id/applyButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:background="@drawable/ai_bubble_btn_bg_accent"
            android:text="@string/button_apply"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/ai_bubble_btn_bg_dark"
            android:text="@string/button_cancel"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/redoButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:background="@drawable/ai_bubble_btn_bg"
            android:text="@string/button_redo"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>